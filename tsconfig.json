{
  "compilerOptions": {
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2015.promise",
      "es2017",
      "es2019"
    ],
    "rootDir": "./",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}